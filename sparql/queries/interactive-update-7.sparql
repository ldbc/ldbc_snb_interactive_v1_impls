PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX sn: <http://www.ldbc.eu/ldbc_socialnet/1.0/data/>
PREFIX snvoc: <http://www.ldbc.eu/ldbc_socialnet/1.0/vocabulary/>
PREFIX sntag: <http://www.ldbc.eu/ldbc_socialnet/1.0/tag/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX dbpedia: <http://dbpedia.org/resource/>
PREFIX dbpedia-owl: <http://dbpedia.org/ontology/>

INSERT
{
    sn:comm$commentId a snvoc:Comment .
    sn:comm$commentId snvoc:id "$commentId"^^xsd:long .
    sn:comm$commentId snvoc:creationDate "$creationDate"^^xsd:dateTime .
    sn:comm$commentId snvoc:locationIP "$locationIP"^^xsd:string .
    sn:comm$commentId snvoc:browserUsed "$browserUsed"^^xsd:string .
    sn:comm$commentId snvoc:content "$content"^^xsd:string .
    sn:comm$commentId snvoc:length "$length"^^xsd:int .
    sn:comm$commentId snvoc:hasCreator ?creator .
    sn:comm$commentId snvoc:isLocatedIn ?country .
    sn:comm$commentId snvoc:replyOf ?originalMessage
}
WHERE
{
    ?creator a snvoc:Person .
    ?creator snvoc:id "$authorPersonId"^^xsd:long .
    ?counrty a dbpedia-owl:Country .
    ?country snvoc:id "$countryId"^^xsd:long .
    {
        ?originalMessage a snvoc:Post .
        ?originalMessage snvoc:id "$replyToPostId"^^xsd:long
    } UNION {
        ?originalMessage a snvoc:Comment .
        ?originalMessage snvoc:id "$replyToCommentId"^^xsd:long        
    }
}
